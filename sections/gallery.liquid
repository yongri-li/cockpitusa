<section class="homepage-gallery-{{ section.id }}"
data-section-id="{{ section.id }}"
data-aos="{{ settings.scroll_animation }}">
  {% if section.settings.heading != blank %}
  <div class="section-title row">
    <h2>
      <a href="{{ collection.url }}">
        {{ section.settings.heading | escape }}
      </a>
    </h2>
  </div>
  {% endif %}

  {% if section.settings.full_width %}<div class="gridlock-fluid"><div class="row">{% endif %}
  <article id="promo-images" class="row">
    {% for block in section.blocks %}
      {% case block.settings.image_width %}
      {% when '25%' %}
        {%- assign image_width = 'desktop-3 tablet-fourth' -%}
      {% when '33%' %}
        {%- assign image_width = 'desktop-4 tablet-2' -%}
      {% when '50%' %}
        {%- assign image_width = 'desktop-6 tablet-3' -%}
      {% when '66%' %}
        {%- assign image_width = 'desktop-8 tablet-4' -%}
      {% when '75%' %}
        {%- assign image_width = 'desktop-9 tablet-three-fourths' -%}
      {% when '100%' %}
        {%- assign image_width = 'desktop-12 tablet-6' -%}
      {% endcase %}
      <div class="pimg homepage-promo {{ image_width }} mobile-3 promo-{{ block.id }}" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank and block.settings.button == blank %}<a href="{{ block.settings.link }}">{% endif %}
          <div class="promo-inner">
            {% if block.settings.image != blank %}
              {% include 'basic-responsive-image' | type: block.settings.image %}
              <noscript>
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt }}">
              </noscript>
            {% else %}
              <div class="onboard">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            <div class="caption">
              <div class="caption-content">
                {% if block.settings.heading != blank %}
                  <p>
                    {{ block.settings.heading | escape }}
                  </p>
                {% endif %}
                {% if block.settings.link != blank and block.settings.button != blank %}
                  <span class="cta">
                    <a href="{{ block.settings.link }}">{{ block.settings.button | escape }}</a>
                  </span>
                {% endif %}
               </div>
            </div>
          </div>
        {% if block.settings.link != blank and block.settings.button == blank %}</a>{% endif %}
        <style>
          .homepage-promo.promo-{{ block.id }} .promo-inner p {
            color: {{ block.settings.heading_color }};
          }
          .homepage-promo .promo-inner .cta a {
            font-size: {{ section.settings.promo_button_size }}px;
          }
          {% if block.settings.text_options == 'on_image' %}
          .homepage-promo.promo-{{ block.id }} .promo-inner .caption-content {
            position: absolute;
            bottom: {{ block.settings.vertical_position }}%;
            left: {{ block.settings.horizontal_position }}%;
            {% if block.settings.horizontal_position == 50 %}
            width: 100%;
            margin-left: -50%;
            {% endif %}            
            text-align: {{ block.settings.align_text }};
          }
          {% endif %}
          .homepage-promo.promo-{{ block.id }} .promo-inner .cta a {
            color: {{ block.settings.button_color }};
            background: {{ block.settings.button_background }};
          }
          {% if block.settings.text_options == 'on_image' %}
          .homepage-promo.promo-{{ block.id }} .promo-inner .caption {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
          }
          {% else %}
          .homepage-promo.promo-{{ block.id }} .promo-inner .caption {
            margin-top: 10px;
          }
          {% endif %}


          /* IMAGE BLOCKS */
          section.homepage-gallery-{{ section.id }} {
            background-color: {{ section.settings.promo_background_color }};
          }

          section.homepage-gallery-{{ section.id }},
          section.homepage-gallery-{{ section.id }} .caption p {
            font-size: {{ section.settings.promo_heading_size }}px;
            font-weight: {{ section.settings.promo_heading_weight }};
          }
        </style>
      </div>
    {% endfor %}
    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </article>
  {% if section.settings.full_width %}</div></div>{% endif %}
</section>



{% schema %}
{
  "name": "Gallery",
  "max_blocks": 4,
  "class": "index-section",
  "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Gallery"
      },
      {
        "type": "header",
        "content": "Image Headings"
      },
      {
      "type": "color",
      "id": "promo_background_color",
      "label": "Background color",
      "default": "#fff"
      },
      {
        "type": "select",
        "id": "promo_heading_weight",
        "label": "Heading weight",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "bold",
            "label": "Bold"
          }
        ]
      },
      {
        "type": "range",
        "id": "promo_heading_size",
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px",
        "label": "Heading size",
        "default": 24
      },
      {
        "type": "range",
        "id": "promo_button_size",
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px",
        "label": "Button text size",
        "default": 14
      }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "image_width",
          "label": "Container width",
          "default": "33%",
          "options": [
			      {
               "value":"25%",
               "label":"25%"
            },
            {
               "value":"33%",
               "label":"33%"
            },
            {
               "value":"50%",
               "label":"50%"
            },
            {
               "value":"66%",
               "label":"66%"
            },
            {
               "value":"75%",
               "label":"75%"
            },
            {
               "value":"100%",
               "label":"100%"
            }
          ]
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
       {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our collections"
       },
       {
        "type": "text",
        "id": "button",
        "label": "Button text",
        "default": "Explore"
       },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "button_background",
        "label": "Button background",
        "default": "#000"
      },
      {
         "type": "select",
         "id": "text_options",
         "default": "on_image",
         "options": [
            {
             "value": "on_image",
             "label": "Over image"
            },
           {
             "value": "below_image",
             "label": "Below image"
           }
         ],
         "label": "Text position"
      },
      {
        "type":      "range",
        "id":        "vertical_position",
        "min":       0,
        "max":        100,
        "step":       2,
        "unit":       "%",
        "label":     "Text over image vertical position",
        "default":   12
      },
      {
        "type":      "range",
        "id":        "horizontal_position",
        "min":       0,
        "max":        100,
        "step":       2,
        "unit":       "%",
        "label":     "Text over image horizontal position",
        "default":   14
      },
      {
        "type":"select",
        "id":"align_text",
        "label":"Text alignment",
        "default":"left",
        "options":[
          {
            "value":"left",
            "label":"Left"
          },
          {
            "value":"center",
            "label":"Centered"
          },
          {
            "value":"right",
            "label":"Right"
          }
        ]
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
