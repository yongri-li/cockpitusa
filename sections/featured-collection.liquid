{% include 'spurit_po2_section_snippet', product: null, products: collections[section.settings.collection].products %}
<section class="featured__collection--{{ section.id }} homepage-products" data-section-id="{{ section.id }}" data-section-type="carousel-section" data-aos="{{ settings.scroll_animation }}">
  {% if section.settings.full_width %}<div class="gridlock-fluid"><div class="row">{% endif %}
    {%- assign collection = collections[section.settings.collection] -%}
    {% if section.settings.heading != blank %}
      <div class="section-title row"><h2><a href="{{ collection.url }}">{{ section.settings.heading | escape }}</a></h2></div>
      <div class="clear"></div>
    {% endif %}
    {% if section.settings.carousel %}{%- assign is_carousel = true -%}{%- endif -%}
    {%- assign prod_limit = section.settings.limit -%}
    {%- assign grid = section.settings.grid -%}
    {% capture slideshow_config %}{
      "wrapAround":true,
      "cellAlign": "left",
      "dragThreshold":"15",
      "pauseAutoPlayOnHover":false,
      "prevNextButtons":true,
      "pageDots": false
    }{% endcapture %}
    <div class="featured__collection{% if is_carousel %}-carousel flickity__section js-carousel{% endif %} product-loop row"{% if is_carousel %} data-flickity='{{ slideshow_config }}'{% endif %}>
      {% if section.settings.collection == blank %}
      {% render 'onboard-product', prod_limit: prod_limit, grid: grid %}
      {% else %}
      {% for product in collection.products limit: prod_limit  %}
      <div class="featured__collection-product product-index" id="product-listing-{{ product.id }}" data-product-id="{{ product.id }}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">
        {% render 'product-listing', product: product, collection: collection %}
      </div>
      {% endfor %}
      {% endif %}
    </div>
  {% if section.settings.full_width %}</div></div>{% endif %}
  {% case section.settings.grid %}
  {% when 2 %}
  {%- assign prod_grid = 50 -%}
  {% when 3 %}
  {%- assign prod_grid = 33.333 -%}
  {% when 4 %}
  {%- assign prod_grid = 25 -%}
  {% when 5 %}
  {%- assign prod_grid = 20 -%}
  {% endcase %}
  <style>
    section.featured__collection--{{ section.id }} {
      background: {{ section.settings.background_color }};
    }

    {% if settings.section_titles != 'text_only' %}
      section.featured__collection--{{ section.id }} .section-title h2 {
        border-color: {{ section.settings.heading_color }} !important;
      }
    {% endif %}

    section.featured__collection--{{ section.id }} .section-title h2,
    section.featured__collection--{{ section.id }} .section-title h2 a {
      color: {{ section.settings.heading_color }} !important;
    }

    section.featured__collection--{{ section.id }} .product-index a {
      display: block;
    }

    section.featured__collection--{{ section.id }} .product-index a:focus {
      outline-offset: unset !important;
    }

    {% if is_carousel %}
      section.featured__collection--{{ section.id }} .featured__collection-carousel .featured__collection-product {
        width: {{ prod_grid }}%;
      }
    {% else %}
      section.featured__collection--{{ section.id }} .featured__collection {
        display: flex;
        flex-wrap: wrap;
      }

      section.featured__collection--{{ section.id }} .featured__collection .featured__collection-product {
        width: {{ prod_grid }}%;
      }
    {% endif %}
  </style>

</section>
<div class="clear"></div>


{% schema %}
  {
    "name": "Featured collection",
    "class": "index-section",
    "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured collection"
    },
    {
       "type": "color",
       "id": "heading_color",
       "label": "Heading color",
       "default": "#000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "id": "carousel",
      "type": "checkbox",
      "label": "Display in carousel"
    },
    {
      "type": "range",
      "id": "grid",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products per row",
      "default": 4
    },
    {
      "type": "range",
      "id": "limit",
      "min": 2,
      "max": 30,
      "step": 1,
      "label": "Products shown",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
