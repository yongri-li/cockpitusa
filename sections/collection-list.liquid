<section class="homepage-collection-list-{{ section.id }} collection-loop homepage-section" data-section-id="{{ section.id }}" data-aos="{{ settings.scroll_animation }}">
{% if section.settings.full_width %}<div class="gridlock-fluid"><div class="row">{% endif %}

    {% if section.settings.heading != blank %}
      <div class="section-title row">
        <h2>
          {{ section.settings.heading | escape }}
        </h2>
      </div>
    {% endif %}

    <div class="clear"></div>

    {% case section.settings.grid %}
    {% when 2 %}
      {%- assign grid_item_width = 'desktop-6 tablet-3 mobile-half' -%}
    {% when 3 %}
      {%- assign grid_item_width = 'desktop-4 tablet-2 mobile-half' -%}
    {% when 4 %}
      {%- assign grid_item_width = 'desktop-3 tablet-2 mobile-half' -%}
    {% endcase %}

    <article class="row collection-loop">
      {% for block in section.blocks limit: section.blocks.size %}
        {%- assign collection = collections[block.settings.collection] -%}
        <div class="collection-item {{ grid_item_width }}" data-alpha="{{ collection.title }}" {{ block.shopify_attributes }}>
          {% if block.settings.collection == blank %}
            {% capture current %}{{ forloop.index }}{% endcapture %}
      	    {%- assign placeholder = 'collection-' | append: current -%}
            <div class="collection-image ci onboard">
              <a href="#">
                {{ placeholder | placeholder_svg_tag }}
              </a>
            </div>
            <div class="product-details">
              <h3><a href="#">Sample collection {{ forloop.index }}</a></h3>
            </div>
          {% else %}
            {% render 'collection-grid-item', collection: collection %}
          {% endif %}
        </div>
      {% endfor %}
    </article>

  {% if section.blocks.size == 0 %}
    {% render 'onboard-collection' %}
  {% endif %}
{% if section.settings.full_width %}</div></div>{% endif %}
</section>
<div class="clear"></div>

<style>
  section.homepage-collection-list-{{ section.id }} {
    background: {{ section.settings.background_color }};
  }
  section.homepage-collection-list-{{ section.id }} .collection-image {
    display: block;
  }
  section.homepage-collection-list-{{ section.id }} h2,
  section.homepage-collection-list-{{ section.id }} h2 a,
  section.homepage-collection-list-{{ section.id }} .product-details h3 a {
    color: {{ section.settings.text_color }} !important;
  }
  section.homepage-collection-list-{{ section.id }} .section-title:after {
    background: {{ section.settings.text_color }} !important;
  }
</style>

{% schema %}
{
  "name": "Collection list",
  "class": "index-section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collection list"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "grid",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Collections per row",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection",
      "settings": [
        {
          "label": "Collection",
          "id": "collection",
          "type": "collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection list",
      "category": "Collection",
      "settings": {
        "grid": 3
      },
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
	      {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}
